<% include ./partials/header %>

<div class="ui main container">
	<i onclick="history.back()" class="angle left icon" style="cursor: pointer; font-size: 25px;"></i>
	<div class="ui segment">
		<div class="ui huge header"><%= blog.title %></div>
		<div class="ui top attached">
			<div class="item">
				<img class="ui centered rounded image" src="<%=blog.image%>">
				<div class="ui hidden divider content">
					<span><%=blog.created.toDateString() %></span>
				</div>
				<div class="description body-padding">
					<p><%- blog.body %></p>
				</div>
				<a class="ui purple basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
				<form class="show_form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
					<button class="ui red basic button">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>



<% include ./partials/footer %>